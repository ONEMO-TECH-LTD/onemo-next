# =============================================================================
# ONEMO Environment Variables
# Copy this file to .env.local and fill in actual values
# =============================================================================

# Supabase
NEXT_PUBLIC_SUPABASE_URL=          # https://<project-id>.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=     # Supabase dashboard -> Settings -> API -> anon/public key
SUPABASE_SERVICE_ROLE_KEY=         # Supabase dashboard -> Settings -> API -> service_role key (NEVER expose to browser)

# Cloudinary
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=du6q2q4ab
CLOUDINARY_API_KEY=                # Cloudinary dashboard -> Settings -> API Keys
CLOUDINARY_API_SECRET=             # Cloudinary dashboard -> Settings -> API Keys (NEVER expose to browser)
CLOUDINARY_ENV_PREFIX=dev/         # "dev/" for DEV, "" (empty string) for PROD

# Shopify
SHOPIFY_APP_CLIENT_ID=             # From Shopify custom app (onemo-shop-next). Used by scripts/shopify-token.mjs for Admin API token exchange.
SHOPIFY_APP_CLIENT_SECRET=         # From Shopify custom app. Used by scripts/shopify-token.mjs. Keep secret.
SHOPIFY_STOREFRONT_ACCESS_TOKEN=   # From Shopify custom app (onemo-shop-next)
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=  # Storefront API token (safe for browser). From Shopify custom app.
SHOPIFY_ADMIN_API_ACCESS_TOKEN=    # From Shopify custom app (or client credentials grant — see SSOT 4.4)
SHOPIFY_WEBHOOK_SECRET=            # From Shopify webhook settings
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=  # onemo-dev.myshopify.com (DEV) or onemo-4865.myshopify.com (PROD)

# App
NEXT_PUBLIC_APP_URL=               # http://localhost:3000 (DEV) or https://onemo.fashion (PROD)

# --- Agent & Design Tooling (used by Claude Code, scripts, SDK — NOT by Next.js app) ---
FIGMA_ACCESS_TOKEN=                # Figma -> Settings -> Personal Access Tokens. Used by figma-console-mcp.
SUPERNOVA_API_KEY=                 # app.supernova.io -> Profile -> Settings -> Authentication. Used by @supernovaio/sdk.
SUPERNOVA_DS_ID=728795             # ONEMO DESIGN SYSTEM. Not a secret — needed for SDK/MCP config.
